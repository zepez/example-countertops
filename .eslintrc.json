{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"next/core-web-vitals"
	],
	"parserOptions": {
		"ecmaFeatures": { "jsx": true },
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [ "react" ],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"indent": [ "error", "tab" ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "double" ],
		"semi": [ "error", "always" ]
	},
	"ignorePatterns": ["ads.js", "utils.js", "production.js", "development.js", "server.js"],
	"globals": {
		"React": "writable"
	}
}
